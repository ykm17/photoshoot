<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".basic.ResetPasswordActivity"
    android:background="@color/blue1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset Passowrd "
        android:textSize="50sp"
        android:textColor="@color/white"
        android:fontFamily="@font/cursue"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="50dp"
        android:paddingBottom="40dp">

        <EditText
            android:id="@+id/reset_email_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Registered email"
            android:textSize="26sp"
            android:fontFamily="@font/basicminimal"
            android:paddingStart="10dp"
            android:paddingLeft="10dp" />

        <Button
            android:id="@+id/reset_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:textAllCaps="false"
            android:textSize="23sp"
            style="@style/raisedbutton"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Note: To change password email will be sent on registered email it"
            android:textSize="25sp"
            android:fontFamily="@font/basicminimal"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="0dp"/>

    </LinearLayout>

</LinearLayout>