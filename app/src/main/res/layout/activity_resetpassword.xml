<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".basic.ResetPasswordActivity"
    android:background="@color/grey1">

    <ImageView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_window" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Happy Shoots..."
        android:textColor="@color/white"
        android:textSize="30sp"
        android:fontFamily="@font/cursue"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="50dp"
        android:paddingBottom="40dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset Password "
            android:textSize="50sp"
            android:textColor="@color/grey1"
            android:fontFamily="@font/cursue"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/reset_email_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Registered email"
            android:textSize="26sp"
            android:fontFamily="@font/basicminimal"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:maxLines="1"
            android:inputType="textEmailAddress"/>

        <Button
            android:id="@+id/reset_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:background="@drawable/curvedbackground"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Note: To change password email will be sent on registered Email Id"
            android:textSize="23sp"
            android:fontFamily="@font/basicminimal"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="0dp"/>

    </LinearLayout>

</LinearLayout>